@model Gestion_Navettes.Models.users

@{
    Layout = null;
    ViewBag.Title = "register";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Register</title> 
    <link href="/Content/css/auth.css" rel="stylesheet">
</head>
<body>



    <div class="login-box" style="width:500px">
        <h2>Sign up</h2>

        <p id='hideMe' class="visible">@ViewBag.Notification</p>

        <form action="/register" id="f" method="post">
            @Html.AntiForgeryToken()
           <!-- @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = "color:red" })-->

            <div class="user-box">
                <input id="nom_complet" name="nom_complet" value="@Model.nom_complet" type="text" required="">
                <label>Full Name</label>
                <p id='hideMe' class="visible">
                    @Html.ValidationMessageFor(model => model.nom_complet, "", new { @class = "text-danger" })
                </p>
            </div>

            <div class="user-box">
                <input id="email" name="email" value="@Model.email" type="text" required="">
                <label>Email</label>
                <p id='hideMe' class="visible">
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                </p>
            </div>

            <div class="user-box">
                <input id="tele" name="tele" type="text" value="@Model.tele" required="">
                <label>Phone</label>
                <p id='hideMe' class="visible">
                    @Html.ValidationMessageFor(model => model.tele, "", new { @class = "text-danger" })
                </p>
            </div>

            <div class="user-box">
                <input id="lgn" name="lgn" type="text" value="@Model.lgn" required="">
                <label>User Name</label>
                <p id='hideMe' class="visible">
                    @Html.ValidationMessageFor(model => model.lgn, "", new { @class = "text-danger" })
                </p>
            </div>

            <div class="user-box">
                <input id="psw" name="psw" type="password" required="">
                <span class="show-password" id="show-password">
                    <svg width="18px" height="13px" viewBox="0 0 18 13 version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                        <g id="Visual-designs" stroke="none" stroke-width="1" fill-rule="evenodd">
                            <g id="4.1_Update-Password" transform="translate(-481.000000, -418.000000)">
                                <path d="M490,418 C485.909091,418 482.415455,420.544545 481,424.136364 C482.415455,427.728182 485.909091,430.272727 490,430.272727 C494.090909,430.272727 497.584545,427.728182 499,424.136364 C497.584545,420.544545 494.090909,418 490,418 L490,418 Z M490,428.227273 C487.741818,428.227273 485.909091,426.394545 485.909091,424.136364 C485.909091,421.878182 487.741818,420.045455 490,420.045455 C492.258182,420.045455 494.090909,421.878182 494.090909,424.136364 C494.090909,426.394545 492.258182,428.227273 490,428.227273 L490,428.227273 Z M490,421.681818 C488.641818,421.681818 487.545455,422.778182 487.545455,424.136364 C487.545455,425.494545 488.641818,426.590909 490,426.590909 C491.358182,426.590909 492.454545,425.494545 492.454545,424.136364 C492.454545,422.778182 491.358182,421.681818 490,421.681818 L490,421.681818 Z" id="Shape"></path>
                            </g>
                        </g>
                    </svg>
                </span>
                <label>Password</label>
                <p id='hideMe' class="visible">
                    @Html.ValidationMessageFor(model => model.psw, "", new { @class = "text-danger" })
                </p>
            </div>



            <a href="#" onclick="document.getElementById('f').submit();">

                <span></span>
                Sign up
            </a>

            <a href="/Login">

                <span></span>
                Login
            </a>

            <a href="/">
                <span></span>
                << Go Back To Home
            </a>
        </form>
    </div>
    <script>
        var passwordInput = document.getElementById('psw');

        var showPasswordBtn = document.getElementById('show-password');


        showPasswordBtn.addEventListener("mousedown", showPassword);

        showPasswordBtn.addEventListener("mouseup", hidePassword);

        function showPassword() {
            console.log('show');
            passwordInput.type = 'text';
        }

        function hidePassword() {
            console.log('hide');
            passwordInput.type = 'password';
        }

    </script>

</body>


</html>