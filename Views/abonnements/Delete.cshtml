        <dt>
            Arrival city :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ville_arrive)
        </dd>

        <dt>
            Departure Date :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.date_depart)
        </dd>

        <dt>
            Arrival Date :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.date_arrive)
        </dd>

        <dt>
