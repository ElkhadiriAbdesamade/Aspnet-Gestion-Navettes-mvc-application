@model Gestion_Navettes.Models.vehicule

@{
    ViewBag.Title = "Delete";
}


<div class="container1">
    <h2 style="text-align:center">Delete Vehicule</h2>
    <h3>Are you sure you want to delete this?</h3>
    <hr class="style-seven" />
    <dl>
        <dt>
            vehicles Name :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nom_vh)
        </dd>

        <dt>
            vehicles capacity :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.capacite_vh)
        </dd>

        <dt>
            vehicles brand :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.marque_vh)
        </dd>

        <dt>
            vehicles model :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.modele_vh)
        </dd>

        <dt>
            registration number :
        </dt>

        <dd>
            @Html.DisplayFor(model => model.immatricul_vh)
        </dd>

    </dl>

    <form action="/Vehicules/suppr/@Html.DisplayFor(model => model.id_vh)" id="f" method="post" novalidate="novalidate">
        @Html.AntiForgeryToken()

        <p>
            <a onclick="document.getElementById('f').submit();" class="button4" style="background-color:#C82333;cursor:pointer;">Delete</a>
            |
            <a href="/Vehicules" class="button4" style="background-color:#2B9CB8;">Back to List</a>
        </p>
    </form>
</div>
